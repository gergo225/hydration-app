<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gergo225.hydrationapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.gergo225.hydrationapp.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.gergo225.hydrationapp.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_navigation_settings_to_updateValueFragment"
            app:destination="@id/updateValueFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateValueFragment"
        android:name="com.gergo225.hydrationapp.ui.update_value.UpdateValueFragment"
        android:label="UpdateValueFragment"
        tools:layout="@layout/fragment_update_value" >
        <argument
            android:name="settingsOption"
            app:argType="com.gergo225.hydrationapp.ui.settings.SettingsOption" />
    </fragment>

</navigation>